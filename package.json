	"license": "MIT",
	"dependencies": {
		"discord.js": "^14.14.1",
		"dotenv": "^16.3.1"
	},
	"devDependencies": {
		"tsup": "^8.0.1",
		"tsx": "^4.6.2",
		"typescript": "^5.3.3"
	}
}
